---
import { Image } from "astro:assets";
import ForumGamersIcon from "../icons/forumGamersIcon.astro";
import Slider from "../slider.astro";
import Github from "../icons/github.astro";
import Mongo from "../icons/mongo.astro";
import Pg from "../icons/pg.astro";
import Cassandra from "../icons/cassandra.astro";
import Elasticsearch from "../icons/elasticsearch.astro";
import Graphql from "../icons/graphql.astro";
import Nextjs from "../icons/nextjs.astro";
import Express from "../icons/express.astro";
import Golang from "../icons/golang.astro";
import Rabbitmq from "../icons/rabbitmq.astro";
import Redis from "../icons/redis.astro";
---

<article
  style={{ transform: "perspective(75em) rotateX(18deg)" }}
  id="project-forumGamers"
  class="relative z-10 mx-auto max-w-[1244px] overflow-hidden py-20 sm:rounded-3xl">
  <Image
    format="webp"
    src="/project-ournament-lines.png"
    width="1000"
    height="1000"
    loading="lazy"
    alt=""
    class="pointer-events-none absolute left-0 top-0 z-0 min-w-[600px] sm:min-w-[1000px]"
  />

  <Image
    format="webp"
    src="/project-ournament-lines-btm-red.png"
    loading="lazy"
    width="1000"
    height="1000"
    alt=""
    class="pointer-events-none absolute right-0 bottom-0 z-0 min-w-[500px] sm:min-w-[1000px]"
  />

  <div class="relative z-10 px-5 sm:px-10 lg:px-16">
    <h3 class="sr-only">Forum Gamers</h3>
    <ForumGamersIcon />
    <h4 class="sr-only">About</h4>

    <p class="mt-10 text-lg !leading-150 text-dark sm:text-2xl">
      <span class="font-semibold"> Welcome to ForumGamers</span> The Social
      Media Platform for you,Gamers!
    </p>
  </div>

  <div class="portfolio-images">
    <Slider
      name="forumGamers"
      images={[{ src: "/forumGamers/figma-home.png", alt: "figma-home" }]}
    />
  </div>

  <div class="relative z-10 px-5 sm:px-10 lg:px-16">
    <p class="text-lg !leading-150 text-dark sm:text-2xl">
      Looking to elevate your gaming experience? ForumGamers is here to provide
      a complete solution for gamers. Find the perfect teammates, host exciting
      tournaments, and securely transact in-game. Join now and achieve great
      feats with our community!
    </p>
    <br />
    <br />

    <div class="flex items-start space-x-4 pl-5 sm:space-x-10 sm:pl-8">
      <a
        target="_blank"
        href="https://github.com/forumGamers"
        class="font-semibold leading-6 tracking-tight">
        <span
          class="block text-xl leading-4 text-dark sm:text-[32px] sm:!leading-100">
          Forum Gamers
        </span>
        <span
          class="inline-flex space-x-[6px] text-sm text-slate-700 sm:pt-2 sm:text-xl">
          <span>on</span>
          <span><Github /></span>
          <span>github.com</span>
        </span>
      </a>
    </div>

    <div class="mt-20">
      <h4 class="text-2xl font-semibold leading-140 text-dark sm:text-[32px]">
        Featured technologies used
      </h4>
      <div class="mt-6 -ml-2 flex flex-wrap gap-3 sm:ml-0">
        {
          [
            <Mongo />,
            <Pg />,
            <Cassandra />,
            <Elasticsearch />,
            <Graphql />,
            <Nextjs />,
            <Express />,
            <Golang />,
            <Rabbitmq />,
            <Redis />,
          ].map((icon) => (
            <div class="-ml-2 w-20 scale-[90%] sm:ml-0 sm:min-h-[100px] sm:min-w-[100px] sm:scale-100">
              {icon}
            </div>
          ))
        }
      </div>
    </div>

    <div class="mt-14"></div>
  </div>
</article>

<style>
  article {
    background: linear-gradient(
        142.21deg,
        rgba(231, 80, 117, 0.1) -0.37%,
        rgba(236, 254, 255, 0) 66.76%
      ),
      linear-gradient(
        318.59deg,
        rgba(232, 85, 121, 0.2) 3.78%,
        rgba(236, 254, 255, 0) 47.39%
      ),
      #ffffff;
    box-shadow:
      15px 24px 17px rgba(0, 0, 0, 0.01),
      7px 11px 13px rgba(0, 0, 0, 0.02),
      2px 3px 7px rgba(0, 0, 0, 0.02),
      0px 0px 0px rgba(0, 0, 0, 0.02);
  }

  @media (max-width: 640px) {
    article {
      background: linear-gradient(
        90deg,
        rgba(231, 80, 117, 0.1) 0%,
        #ffffff 66.89%
      );
    }
  }

  article::before {
    content: "";
    pointer-events: none;
    user-select: none;
    position: absolute;
    inset: 0px;
    border-radius: inherit;
    padding: 2px;
    background: linear-gradient(
        135deg,
        hsla(345, 76%, 62%, 0.4) 5%,
        transparent,
        transparent,
        transparent,
        transparent,
        transparent,
        transparent
      ),
      linear-gradient(
        300deg,
        hsla(345, 76%, 62%, 0.8) 10%,
        transparent,
        transparent,
        transparent,
        transparent,
        transparent
      );
    content: "";
    pointer-events: none;
    user-select: none;
    position: absolute;
    border-radius: inherit;
    -webkit-mask:
      linear-gradient(black, black) content-box content-box,
      linear-gradient(black, black);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
  }

  @media (max-width: 640px) {
    article::before {
      padding: 0;
      padding-top: 2px;
      background: linear-gradient(
        90deg,
        rgba(231, 80, 117, 0.8) 0%,
        #ffffff 66.89%
      );
    }
  }
</style>
