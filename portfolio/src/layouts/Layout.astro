    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/jpg" href="/me.jpg" />
    <link rel="stylesheet" href="/fonts/Figtree/figtree.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <SEO
      title={title}
      description={desc}
      openGraph={{
        optional: {
          locale: "id_ID",
          description: desc,
          siteName: "Ananda Fiqri",
        },
        basic: {
          image: "/me.jpg",
          title,
          type: "website",
        },
      }}
    />
  </head>
